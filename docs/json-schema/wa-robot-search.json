{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wezterm-automata.dev/schemas/wa-robot-search.json",
  "title": "WA Robot Search Response",
  "description": "Schema for the data field when calling 'wa robot search <query>'. Returns lexical, semantic, or hybrid search results with policy-redacted query/text payloads.",
  "type": "object",
  "required": ["query", "results", "total_hits", "limit"],
  "properties": {
    "query": {
      "type": "string",
      "description": "The canonical query string after policy redaction"
    },
    "results": {
      "type": "array",
      "description": "Matching segments ordered by relevance",
      "items": {
        "$ref": "#/$defs/search_hit"
      }
    },
    "total_hits": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of hits (may exceed returned results if limited)"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum results returned"
    },
    "pane_filter": {
      "type": "integer",
      "minimum": 0,
      "description": "If set, results were filtered to this pane_id"
    },
    "since_filter": {
      "type": "integer",
      "description": "If set, results were filtered to segments after this timestamp (epoch ms)"
    },
    "until_filter": {
      "type": "integer",
      "description": "If set, results were filtered to segments before this timestamp (epoch ms)"
    },
    "mode": {
      "type": "string",
      "enum": ["lexical", "semantic", "hybrid"],
      "description": "Search mode used for query execution"
    },
    "metrics": {
      "type": "object",
      "description": "Optional search pipeline metrics (present for semantic/hybrid MCP responses)",
      "properties": {
        "requested_mode": {
          "type": "string",
          "enum": ["lexical", "semantic", "hybrid"]
        },
        "effective_mode": {
          "type": "string",
          "enum": ["lexical", "semantic", "hybrid"]
        },
        "fallback_reason": {
          "type": ["string", "null"]
        },
        "rrf_k": {
          "type": "integer",
          "minimum": 1
        },
        "lexical_weight": {
          "type": "number"
        },
        "semantic_weight": {
          "type": "number"
        },
        "lexical_candidates": {
          "type": "integer",
          "minimum": 0
        },
        "semantic_candidates": {
          "type": "integer",
          "minimum": 0
        },
        "semantic_cache_hit": {
          "type": "boolean"
        },
        "semantic_latency_ms": {
          "type": "integer",
          "minimum": 0
        },
        "semantic_rows_scanned": {
          "type": "integer",
          "minimum": 0
        },
        "semantic_budget_state": {
          "type": "string"
        },
        "semantic_backoff_until_ms": {
          "type": ["integer", "null"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "search_hit": {
      "type": "object",
      "description": "A single search result with score and metadata",
      "required": ["segment_id", "pane_id", "seq", "captured_at", "score"],
      "properties": {
        "segment_id": {
          "type": "integer",
          "description": "Unique segment identifier"
        },
        "pane_id": {
          "type": "integer",
          "minimum": 0,
          "description": "Pane the segment was captured from"
        },
        "seq": {
          "type": "integer",
          "minimum": 0,
          "description": "Sequence number within the pane"
        },
        "captured_at": {
          "type": "integer",
          "description": "Unix timestamp (ms) when the segment was captured"
        },
        "score": {
          "type": "number",
          "description": "Mode-specific ranking score (BM25 for lexical, fused/semantic score for semantic or hybrid)"
        },
        "snippet": {
          "type": "string",
          "description": "Redacted relevant portion of the segment with match highlights"
        },
        "content": {
          "type": "string",
          "description": "Redacted full segment content (present when snippets are disabled)"
        },
        "semantic_score": {
          "type": "number",
          "description": "Semantic similarity score (when semantic lane contributes)"
        },
        "fusion_rank": {
          "type": "integer",
          "minimum": 0,
          "description": "0-based fused rank position (semantic/hybrid modes)"
        }
      },
      "additionalProperties": false
    }
  }
}
